<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filtration.FiltrationSettingsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="@string/filtration_settings"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/workplace_layout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_60"
        android:layout_marginTop="@dimen/spacing_16"
        android:hint="@string/workplace"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/workplace_edit"
            style="@style/TextInputEditTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            tools:ignore="Deprecated" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/workplace_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_16"
        android:clickable="false"
        android:src="@drawable/ic_arrow_right_filter"
        app:layout_constraintBottom_toBottomOf="@id/workplace_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/workplace_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/industry_layout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_60"
        app:layout_constraintTop_toBottomOf="@id/workplace_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/industry_edit"
            style="@style/TextInputEditTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ellipsize="end"
            android:hint="@string/industry" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/industry_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_16"
        android:clickable="false"
        android:src="@drawable/ic_arrow_right_filter"
        app:layout_constraintBottom_toBottomOf="@id/industry_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/industry_layout" />

    <FrameLayout
        android:id="@+id/salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/industry_layout">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/salary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textInputFilledStyle"
            android:layout_marginTop="@dimen/spacing_24"
            android:layout_marginHorizontal="@dimen/spacing_16"
            app:boxStrokeWidth="0dp"
            android:hint="@string/expected_salary"
            android:textColorHint="@color/gray_to_white"
            app:expandedHintEnabled="false"
            app:placeholderText="@string/enter_amount"
            app:placeholderTextColor="@color/gray_to_white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/salary_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_12dp"
                android:backgroundTint="@color/light_gray_to_gray"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/spacing_32"
            android:layout_marginTop="@dimen/spacing_12"
            android:src="@drawable/ic_clear_salary"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_24"
        android:layoutDirection="rtl"
        android:text="@string/dont_show_without_salary"
        android:textAppearance="@style/DefaultTextMedium"
        app:layout_constraintTop_toBottomOf="@id/salary"
        app:buttonTint="@color/blue"
        app:buttonIconTint="@color/white" />

    <Button
        android:id="@+id/apply_button"
        style="@style/Filter_Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/spacing_16"
        android:layout_marginBottom="@dimen/spacing_8"
        android:backgroundTint="@color/blue"
        android:text="@string/apply"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/spacing_12"
        app:layout_constraintBottom_toTopOf="@id/reset_button" />

    <Button
        android:id="@+id/reset_button"
        style="@style/Filter_Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/spacing_16"
        android:layout_marginBottom="@dimen/spacing_24"
        android:text="@string/reset"
        android:textColor="@color/red"
        app:cornerRadius="@dimen/spacing_12"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
