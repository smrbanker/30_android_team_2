<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextMedium">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DefaultTextRegular" parent="DefaultTextMedium">
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarTitle" parent="DefaultTextMedium">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TitleItemStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextItemStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>
