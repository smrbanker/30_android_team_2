<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextMedium">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DefaultTextRegular" parent="DefaultTextMedium">
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarTitle" parent="DefaultTextMedium">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TitleItemStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextItemStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SeparatorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/separator</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="PhoneStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/outline_add_call</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="MailStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/outline_attach_email</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="TextInputEditTextLocation">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginEnd">56dp</item>
    </style>

    <style name="Filter_Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Industry_EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
</resources>
